{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "listener",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/polity/main.go",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "cmd",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/polity/main.go",
			"args": ["-config", "testdata/falling-wave.json", "info"],
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "init",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/polity/",
			"args": ["init"],
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "daemon",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/polityd/",
			"args": ["-config", "testdata/falling-wave.json"],
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		},
	]
